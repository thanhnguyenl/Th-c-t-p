@model Doan.Models.Dichvu

@{
    ViewData["Title"] = "Edit";
}

<h3>CHỈNH SỬA THÔNG TIN DỊCH VỤ KỸ THUẬT</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Stt" />
            <div class="form-group">
                <label asp-for="MaDichVu" class="control-label"></label>
                <input asp-for="MaDichVu" class="form-control" />
                <span asp-validation-for="MaDichVu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenDichVu" class="control-label"></label>
                <input asp-for="TenDichVu" class="form-control" />
                <span asp-validation-for="TenDichVu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonGia" class="control-label"></label>
                <input asp-for="DonGia" class="form-control" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuyTrinh" class="control-label"></label>
                <input asp-for="QuyTrinh" class="form-control" />
                <span asp-validation-for="QuyTrinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CskcbCgkt" class="control-label"></label>
                <input asp-for="CskcbCgkt" class="form-control" />
                <span asp-validation-for="CskcbCgkt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CskcbCls" class="control-label"></label>
                <input asp-for="CskcbCls" class="form-control" />
                <span asp-validation-for="CskcbCls" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaCskcb" class="control-label"></label>
                <select asp-for="MaCskcb" class="form-control" asp-items="ViewBag.MaCskcb"></select>
                <span asp-validation-for="MaCskcb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
